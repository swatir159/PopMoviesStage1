<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="New Text"
        android:id="@+id/MovieTitle"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="@color/material_deep_teal_200"
        android:layout_marginTop="8dp" />

    <ImageView android:id="@+id/MovieDetailView"
        android:layout_width="209dp"
        android:layout_height="107dp"
        android:layout_gravity="left"
        android:layout_above="@+id/UserRating"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:text="New Text"
        android:id="@+id/ReleaseDate"
        android:layout_gravity="right"
        android:layout_alignTop="@+id/MovieDetailView"
        android:layout_alignParentRight="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/UserRating"
        android:layout_weight="1"
        android:numStars="10"
        android:stepSize="0.1"
        android:maxWidth="50dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true" />"/>




    <TextView
        android:layout_width="291dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/OverView"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.24"
        android:layout_below="@+id/UserRating"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />


</RelativeLayout>